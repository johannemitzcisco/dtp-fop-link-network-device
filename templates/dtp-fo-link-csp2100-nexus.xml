<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$DEVICE-NAME}</name>
      <config>
        <?set-context-node {/network[name=$SERVICE-NAME]/topology[name=$TOPOLOGY-NAME]}?>

        <cdp xmlns="http://tail-f.com/ned/cisco-ios-xr" when="link/side/function-objects/cdp[function-object-name=$FO-NAME]/enable = 'true'}"></cdp>
        
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <TenGigE foreach="{link/side[node=$NODE-NAME]/side-type/dtp-fo-link-physical:physical/port[port-type='TenGigE']}">
            <id>{current()/port-name}</id>
              <cdp/>
              <cdp tags="delete" when="{../../../function-objects/cdp[function-object-name=$FO-NAME]/enable='false'}"/>
          </TenGigE>
          <FortyGigE foreach="{link/side[node=$NODE-NAME]/side-type/dtp-fo-link-physical:physical/port[port-type='FortyGigE']}">
            <id>{current()/port-name}</id>
              <cdp/>
              <cdp tags="delete" when="{../../../function-objects/cdp[function-object-name=$FO-NAME]/enable='false'}"/>
          </FortyGigE>
          <HundredGigE foreach="{link/side[node=$NODE-NAME]/side-type/dtp-fo-link-physical:physical/port[port-type='HundredGigE']}">
            <id>{current()/port-name}</id>
              <cdp/>
              <cdp tags="delete" when="{../../../function-objects/cdp[function-object-name=$FO-NAME]/enable='false'}"/>
          </HundredGigE>
          <preconfigure>
              <HundredGigE foreach="{link/side[node=$NODE-NAME]/side-type/dtp-fo-link-physical:physical/port[port-type='HundredGigE']}">
                <id>{current()/port-name}</id>
                <cdp/>
                <cdp tags="delete" when="{../../../function-objects/cdp[function-object-name=$FO-NAME]/enable='false'}"/>
              </HundredGigE>
          </preconfigure>
        </interface>

        <cdp xmlns="http://tail-f.com/ned/cisco-nx"  when="link/side/function-objects/cdp[function-object-name=$FO-NAME]/enable = 'true'}">
          <enable>true</enable>
        </cdp>
        <interface xmlns="http://tail-f.com/ned/cisco-nx" foreach="{link/side[node=$NODE-NAME]/side-type/dtp-fo-link-physical:physical}">
          <Ethernet foreach="{port[port-type='Ethernet']}">
            <name>{current()/port-name}</name>
            <cdp>
              <enable>{current()/../../../function-objects/cdp[function-object-name=$FO-NAME]/enable}</enable>
            </cdp>
          </Ethernet>
        </interface>

      </config>
  </device>
  </devices>
</config>
